include AUTHORS.txt
include LICENSE.txt
include NEWS.rst
include README.rst
include pyproject.toml

include src/pip/_vendor/README.rst
include src/pip/_vendor/vendor.txt
recursive-include  src/pip/_vendor *LICENSE*
recursive-include  src/pip/_vendor *COPYING*

include docs/docutils.conf
include docs/requirements.txt

exclude .coveragerc
exclude .mailmap
exclude .appveyor.yml
exclude .readthedocs.yml
exclude .pre-commit-config.yaml
exclude tox.ini
exclude noxfile.py

recursive-include src/pip/_vendor *.pem
recursive-include src/pip/_vendor py.typed
recursive-include docs *.css *.py *.rst *.md

exclude src/pip/_vendor/six
exclude src/pip/_vendor/six/moves
recursive-exclude src/pip/_vendor *.pyi

prune .github
prune docs/build
prune news
prune tasks
prune tests
prune tools
